<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <data>
        <variable
            name="publi"
            type="com.example.e2dy.vegetariano_fuerte.models.Publicidad"/>
    </data>


    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="end" >

        <ImageView
            android:id="@+id/imagen_publicidad"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="5dp"
            android:src="@drawable/borde"
            app:imgUrl="@{publi.imagenEntidad}"

            />

        <TextView
            android:id="@+id/nombre_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@{publi.nombreEntidad}"
            tools:text="Nombre entidad"
            android:layout_below="@id/imagen_publicidad"
            android:textColor="#000000"
            android:textSize="22dp"/>

        />

    </RelativeLayout>
</layout>